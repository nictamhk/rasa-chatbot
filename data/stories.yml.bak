version: "3.0"

stories:

- story: ordinary path
  steps:
    - intent: greet
    - action: utter_greet
    - intent: order
    - action: order_form
    - active_loop: order_form
    - intent: terminate.order
    - active_loop: null
    - action: utter_order_confirm
    - action: utter_anything_else
    
- story: no more order
  steps:
    - action: utter_anything_else
    - intent: confirm.deny
    - action: action_deactivate_loop
    - action: validate_order_form
    - action: utter_total
    - intent: payment
    - action: utter_thank_you
    - action: utter_goodbye

- story: order more
  steps:
    - action: utter_anything_else
    - intent: confirm.affirm
    - action: order_form
    - active_loop: order_form
    - intent: terminate.order
    - active_loop: null
    - action: utter_order_confirm
    - action: utter_anything_else

- story: order changed
  steps:
    - intent: order.changed
    - action: utter_goodbye_no_order

- story: inquiry first
  steps:
    - intent: greet
    - action: utter_greet
    - action: utter_chitchat
    - intent: inquiry
    - action: utter_recommendations
    - or:
        - intent: confirm.affirm
        - intent: confirm.deny
    - action: utter_order_confirm
    - action: utter_anything_else
    - action: utter_total
    - intent: payment
    - action: utter_thank_you
    - action: utter_goodbye
    
- story: interactive_story_1
  steps:
  - intent: chitchat
  - action: utter_chitchat_greet
  - intent: order
    entities:
    - main dish: Filet o Fish
  - slot_was_set:
    - user_main: Filet o Fish
  - action: order_form
  - active_loop: order_form
  - slot_was_set:
    - requested_slot: user_side
  - intent: terminate.order
    entities:
    - main dish: Filet o Fish
  - action: utter_order_confirm
  - intent: confirm.affirm
  - action: utter_total
  - intent: payment
    entities:
    - payment: Octopus
  - action: utter_thank_you
  - action: utter_goodbye
